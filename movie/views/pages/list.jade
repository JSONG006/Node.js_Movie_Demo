extends ../layout

block content
	.container
		.row
			table.table.table-responsive.table-bordered
				thead
					tr
						th Movie Name
						th Director
						th Country
						th Year
						//-th Time
						th View
						th Update
						th Delete
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td #{item.title}
							td #{item.director}
							td #{item.country}
							td #{item.year}
							//-td #{moment(item.meta.createAt).format('DD/MM/YYYY')}
							td: a(href="../movie/#{item._id}", target="_blank") View
							td: a(href="../admin/update/#{item._id}", target="_blank") Update
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") Delete