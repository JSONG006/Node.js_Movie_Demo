extends ../layout

block content
	.container
		.row
			form.form.form-horizontal(method="post", action="/admin/movie/new")
				.form-group
					label.col-md-2.control-label(for="inputTitle") Movie Name
					.col-md-10
						input#inputTitle.form-control(type="text", name="movie[title]", value="#{movie.title}")
				.form-group
					label.col-md-2.control-label(for="inputDirector") Director
					.col-md-10
						input#inputDirector.form-control(type="text", name="movie[director]", value="#{movie.director}")
				.form-group
					label.col-md-2.control-label(for="inputCountry") Country
					.col-md-10
						input#inputCountry.form-control(type="text", name="movie[country]", value="#{movie.country}")
				.form-group
					label.col-md-2.control-label(for="inputLanguage") Language
					.col-md-10
						input#inputLanguage.form-control(type="text", name="movie[language]", value="#{movie.language}")
				.form-group
					label.col-md-2.control-label(for="inputPoster") Poster
					.col-md-10
						input#inputPoster.form-control(type="text", name="movie[poster]", value="#{movie.poster}")
				.form-group
					label.col-md-2.control-label(for="inputFlash") Flash
					.col-md-10
						input#inputFlash.form-control(type="text", name="movie[flash]", value="#{movie.flash}")
				.form-group
					label.col-md-2.control-label(for="inputYear") Year
					.col-md-10
						input#inputYear.form-control(type="text", name="movie[year]", value="#{movie.year}")
				.form-group
					label.col-md-2.control-label(for="inputSummary") Summary
					.col-md-10
						textarea#inputSummary.form-control(type="text", name="movie[summary]", value="#{movie.summary}")
				.form-group
						button.btn.btn-primary(type="submit",style="margin-left:50%; margin-top:5%") Submit



